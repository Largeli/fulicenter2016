<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_category_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.ucai.fulicenter.controller.activity.CategoryChildActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back_name"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <cn.ucai.fulicenter.view.CatFileterButton
            android:id="@+id/cfb"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="分类"
            android:textColor="@color/btn_white_normal"
            android:drawableRight="@drawable/arrow2_up"
            />
    </RelativeLayout>
    <LinearLayout
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_category_child_pice"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:text="价格"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_pirc"
            android:src="@mipmap/arrow_order_down"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_category_child_time"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:text="上架时间"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_addTime"
            android:src="@mipmap/arrow_order_up"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_category_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
