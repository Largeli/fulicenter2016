<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_category_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.ucai.fulicenter.controller.activity.CategoryChildActivity"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back_name"
            android:src="@drawable/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_Nmae"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:text="tv_Name"/>
        <ImageView
            android:id="@+id/iv_back_time"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:src="@drawable/arrow2_down"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_category_child_pice"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:text="价格"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@mipmap/arrow_order_down"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_category_child_time"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:text="上架时间"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@mipmap/arrow_order_up"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_category_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
